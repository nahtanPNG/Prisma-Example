generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Person {
  id       Int       @id @default(autoincrement()) //Definindo a chave prim√°ria
  name     String
  username String
  email    String    @unique
  addresses Address[]
}

model Address {
  id       Int     @id @default(autoincrement())
  street   String
  Person   Person? @relation(fields: [personId], references: [id])
  personId Int?
}
